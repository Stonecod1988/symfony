                 <li class="nav-item ">
                     <a class="nav-link " href="{{ path('security_logout') }}"><i class="fa fa-user" aria-hidden="true">&nbsp</i>Se Deconnecter</a>
                 </li>
             {% endif %}
             <li class="nav-item ">
