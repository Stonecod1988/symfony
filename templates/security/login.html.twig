{% extends 'base.html.twig' %}
{% block body %}
    <div class="container corp">
        <h1>Connexion</h1>
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messageData, 'security')}}
            </div>
        {% endif %}
        {% for message in app.flashes('success') %}
            <div class="alert-success mb-1">
                {{ message }}
            </div>
        {% endfor %}
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input type="text" placeholder="votre mail..." class="form-control" required name="_username">
            </div>
            <div class="form-group">
                <input type="password" placeholder="votre mot de passe..."class="form-control" required name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion !</button>
            </div>
        </form>
        <p><a href="{{ path('security_registration') }}">Je n'ai pas de compte...je m'inscris</a></p>
    </div>

{% endblock %}